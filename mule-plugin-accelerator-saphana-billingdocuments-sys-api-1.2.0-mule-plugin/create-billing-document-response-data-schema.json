{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/BasicResponse",
  "definitions": {
    "BasicResponse": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "responseStatus"
      ],
      "properties": {
        "responseStatus": {
          "$ref": "#/definitions/ResponseStatus"
        },
        "resultMessages": {
          "items": {
            "$ref": "#/definitions/ResultMessage"
          },
          "type": "array"
        }
      }
    },
    "ResponseStatus": {
      "enum": [
        "SUCCESS",
        "WARNING",
        "ERROR"
      ],
      "type": "string"
    },
    "ResultMessage": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "severity",
        "code"
      ],
      "properties": {
        "severity": {
          "enum": [
            "INFO",
            "WARNING",
            "ERROR"
          ],
          "type": "string"
        },
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "parameters": {
          "items": {
            "$ref": "#/definitions/ResultParameter"
          },
          "type": "array"
        }
      }
    },
    "ResultParameter": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "paramName",
        "paramValue"
      ],
      "properties": {
        "paramName": {
          "type": "string"
        },
        "paramValue": {
          "type": "string"
        }
      }
    }
  }
}
